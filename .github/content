    // Function to add items to cart
    function addToCart(itemName, itemPrice, quantityId) {
        var quantity = document.getElementById(quantityId).value;
        var total = itemPrice * quantity;
        // Here you can record the selected item and quantity, for example:
        console.log("Item: " + itemName + ", Quantity: " + quantity + ", Total: " + total);
        // You can also add more advanced functionality such as updating a shopping cart UI.
    }
</script>



